{
  "compilerOptions": {
    "outDir": "./dist",
    "incremental": true,
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "ES2021.Promise"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node",
      "bufferutil",
    ],
    "strictPropertyInitialization": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "paths": {
      "cjs/*": [
        "cjs_modules/*"
      ]
    },
    "baseUrl": "./",
    "sourceMap": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "**/node_modules/**",
    "**/dist/**",
    "**/coverage/**"
  ]
}